{

  "manifest_version": 2,
  "name": "Memory Observer",
  "author": "chromia",
  "version": "1.0",

  "description": "Observe consumption amount of RAM.",

  "icons": {
    "64": "icons/64.png"
  },

  "permissions": [
    "nativeMessaging", "storage"
  ],

  "browser_action": {
    "default_icon": "icons/button.png",
    "default_title": "Memory Observer",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent" : true
  },

  "options_ui": {
    "page": "options/options.html"
  }

}
